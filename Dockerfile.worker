# Lightweight worker image — only runs claude CLI inside an isolated container.
# No manager code, no frontend, no FastAPI.

FROM node:20-bookworm

# Minimal system deps + gosu for root→claude privilege drop
RUN apt-get update && apt-get install -y --no-install-recommends \
    git python3 jq curl ca-certificates gosu \
    && rm -rf /var/lib/apt/lists/*

# Claude Code CLI (use mirror + proxy for reliability)
ARG HTTP_PROXY
ARG HTTPS_PROXY
RUN npm config set registry https://registry.npmmirror.com && \
    npm install -g @anthropic-ai/claude-code && \
    npm cache clean --force

# Non-root user (Claude Code requires non-root for --dangerously-skip-permissions)
RUN useradd -m -s /bin/bash claude && \
    mkdir -p /workspace /logs /home/claude/.claude && \
    chown -R claude:claude /workspace /logs /home/claude

# Copy only the run script
COPY --chown=claude:claude worker/run_task.sh /usr/local/bin/run_task.sh
RUN chmod +x /usr/local/bin/run_task.sh

# Copy the entrypoint (runs as root, protects .git, then drops to claude)
COPY worker/worker-entrypoint.sh /usr/local/bin/worker-entrypoint.sh
RUN chmod +x /usr/local/bin/worker-entrypoint.sh

# Copy the CLAUDE.md template for injection into worktrees
COPY --chown=claude:claude claude-md-template.md /etc/claude-md-template.md

WORKDIR /workspace

ENTRYPOINT ["/usr/local/bin/worker-entrypoint.sh"]
